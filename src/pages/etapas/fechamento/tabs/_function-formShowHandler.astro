<script is:inline>
    function formShowHandler(formElement, contentElement) {
        const form = document.querySelector(formElement)
        const content = document.querySelector(contentElement)

        if(form && content){
            form.addEventListener('submit', (event) => {
                event.preventDefault()
                content.style.display = 'block'

                $.fn.dataTable.tables({ visible: true, api: true }).columns.adjust()
            })
        }
    }

    formShowHandler('[data-form="anual"]',     '[data-content="anual"]');
    formShowHandler('[data-form="semestral"]', '[data-content="semestral"]');
    formShowHandler('[data-form="trimestral"]','[data-content="trimestral"]');
    formShowHandler('[data-form="mensal"]',    '[data-content="mensal"]');
</script>

