<div class="card">
    <div class="card-body">

        <section class="container-splide-docs">
            <article class="splide splide-default" id="splide-calendario">
                <div class="splide__track">
                    <ul class="splide__list">
                        {
                            arraySplides.map(item => (
                                <li class="splide__slide">
                                    <div class="splide__slide__container">
                                        <a data-fancybox="gallery" href={item.link}>
                                            <img src={item.img} />

                                            <span class="btn-zoom" data-bs-toggle="tooltip" data-bs-title="Ampliar">
                                                <i class="bi bi-zoom-in icon"></i>
                                            </span>
                                        </a>
                                    </div>

                                    <div class="panel-actions">
                                        <a
                                        data-bs-toggle="tooltip"
                                        data-bs-title="Download"
                                        href={item.link} download>
                                            <i class="bi bi-box-arrow-down icon"></i>
                                        </a>
                                    </div>
                                </li>
                            ))
                        }
                    </ul>
                </div>
            </article>
        </section>

    </div>
</div>

<script is:inline>
    new Splide( '#splide-calendario', {
        gap    : '2rem',

        padding: {
            left : '2rem',
            right: '2rem',
        },

        //type       : 'loop',
        height     : '17rem',
        perPage    : 3,

        //rewind : true,

        breakpoints: {
            800: {
                perPage: 2,
            },
            768: {
                perPage: 1,
            },
        }

    }).mount();

    Fancybox.bind('[data-fancybox="gallery"]', {

    });

    $('[data-row="delete"]').on('click', function () {
