---
import './_style-funil.css'
---

<div class="overflow-auto mt-2">
    <div class="w-100" style="max-width: 550px;">
        <ul class="funnel-container">
            <li class="funnel-row">
                <div class="wrapper-input">
                    <div class="content-input bg-red">
                        <input type="number" class="form-control text-center" placeholder="0">
                    </div>
                </div>

                <span>Leads Total</span>
            </li>

            <li class="funnel-row">
                <div class="wrapper-input">
                    <div class="content-input bg-orange">
                        <input type="number" class="form-control text-center" placeholder="0">
                    </div>
                </div>

                <span>Leads Trabalhados</span>
            </li>

            <li class="funnel-row">
                <div class="wrapper-input">
                    <div class="content-input bg-yellow">
                        <input type="number" class="form-control text-center" placeholder="0">
                    </div>
                </div>

                <span>Pré Matrícula</span>
            </li>

            <li class="funnel-row">
                <div class="wrapper-input">
                    <div class="content-input bg-blue">
                        <input type="number" class="form-control text-center" placeholder="0">
                    </div>
                </div>

                <span>Matrícula Pagas</span>
            </li>
        </ul>
    </div>
</div>
