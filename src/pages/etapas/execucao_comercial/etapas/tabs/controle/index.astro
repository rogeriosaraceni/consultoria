---
import ContentSelecao from "./_content-selecao.astro";
import FunctionFormShowHandler from "../_function-formShowHandler.astro";
import ContentListagem from "./_content-listagem.astro";
import ContentListagemGeUnidade from "./_content-listagem-ge-unidade.astro";
import ModalCadastro from "./modal/cadastro/index.astro";
---

<ContentSelecao />
<FunctionFormShowHandler />

<div data-content="controle" style="display: none;">
    <div class="card">
        <div class="card-body">

            <div class="title-section align-items-end justify-content-between gap-2">
                <span>Controle de Ações</span>
                <div class="d-flex gap-2">
                    <button type="button" class="btn btn-success btn-icon mb-1" data-bs-toggle="modal" data-bs-target="#modalCadControleAcoes">
                        <i class="bi bi-plus-circle"></i>
                        <span>Novo Controle de Ações</span>
                    </button>
                </div>
            </div>

            <ContentListagem />

            <form action="">
                <label>Observações:
                    <textarea name="obs_controleAcoes" class="form-control" rows="3"></textarea>
                </label>

                <hr>

                <div class="d-flex justify-content-end gap-2">
                    <a class="btn btn-success btn-icon" href="/assets/docs/export.xlsx" download="Export">
                        <i class="bi bi-file-earmark-spreadsheet"></i>
                        <span>Exportar Excel</span>
                    </a>

                    <button type="submit" class="btn btn-primary" data-btn="spinner-toast" data-toast-target="cad">
                        <span>Salvar</span>
                        <span class="btn-spinner spinner-border spinner-border-sm d-none" role="status" aria-hidden="true"></span>
                    </button>
                </div>
            </form>
        </div>
    </div>

    <ContentListagemGeUnidade />
    <ModalCadastro />
</div>
