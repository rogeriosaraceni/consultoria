<div class="container-form mx-auto slide-in-left">
    <section class="card blur shadow-blur mb-3 z-0">
        <div class="card-header mt-n4 mx-3 py-3 border-radius-lg bg-gradient-blue shadow-primary z-1 text-center">
            <h2 class="mb-0 text-white">Consultoria</h2>
        </div>

        <div class="card-body">
            <h4>Login</h4>

            <form method="POST" action="../inicio/">
                <div class="mb-4">
                    <label class="w-100">
                        <select
                            name="ano"
                            class="form-select py-2"
                            required
                        >
                            <option value="2022" selected>2022</option>
                        </select>
                    </label>

                    <label class="w-100">
                        <input
                            type="email"
                            name="email"
                            class="form-control py-2"
                            placeholder="e-mail"
                            required
                        />
                    </label>

                    <label class="w-100">
                        <input
                            type="password"
                            name="senha"
                            class="form-control py-2"
                            id="password"
                            placeholder="senha"
                            required
                        />
                    </label>
                </div>

                <button type="submit" class="btn btn-primary w-100 py-2 mb-3">Entrar</button>

                <a
                    class="d-flex align-items-center justify-content-center text-muted py-2"
                    href="recuperar.asp"
                >
                    <small>Esqueceu a senha?</small>
                </a>
            </form>
        </div>
    </section>
</div>
